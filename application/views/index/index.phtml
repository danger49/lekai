<script>
    var scroll = function(){
      var scrollLocation = $('nav').height();
      var height = 370;
      if (scrollLocation < 90) {
        height = 120;
      }
      $('html, body').animate({
        scrollTop: height
      })
    }
    $(function () {
        var video = document.getElementById('videoSource');
        $('#close-video-btn').on('click', function () {
          $('#videoFrame').hide();
          $('.videoClose').hide();
          video.pause();
        })
        $('#play-video-btn').on('click', function () {
            $('#videoFrame').show();
            $('.videoClose').show();
            video.play();
        })

        //滚动位置
      $('#myTab').on('click',function(e){
        scroll();
      });
    });


</script>