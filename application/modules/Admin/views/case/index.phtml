<!--header-->
{@include 'header.phtml'@}
<!--/header-->

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
            <!--menu-->
            {@include 'menu.phtml'@}
            <!--/menu-->
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <h2 class="sub-header">案例中心</h2>
            <div class="row placeholders">
                <div class="col-xs-6 col-sm-3 placeholder">
                    <h4><a href="/admin/case/add">增加案例</a></h4>
                </div>
                <div class="col-xs-6 col-sm-3 placeholder">
                    <h4><a href="/admin/index/main">返回</a></h4>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>名称</th>
                        <th>用户</th>
                        <th>图标</th>
                        <th>操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    {@foreach from=$list item=case@}
                    <tr>
                        <td>{@$case.id@}</td>
                        <td>{@$case.name@}</td>
                        <td>{@$case.client@}</td>
                        <td>{@$case.icon@}</td>
                        <td><a href="/admin/case/edit/?id={@$case.id@}">修改</a> | <a
                                    href="/admin/case/details/?id={@$case.id@}">查看明细列表</a> | <a
                                    href="/admin/case/del/?id={@$case.id@}">删除</a></td>
                    </tr>
                    {@/foreach@}
                    </tbody>
                </table>
                {@$pagebar@}
            </div>
        </div>
    </div>
</div>

<!--footer-->
{@include 'footer.phtml'@}
<!--/footer-->
